    <script>
        var DeleteModalErrors = null;

        var elemetnNAme = null;

        $(function () {

            $('#btn_Add').click(function () {
                openAddorEditPopup(0);
            });

            setActiveMenu();

        });

        function openAddorEditPopup(id) {
            let pageName = $('#pageName').val();
            let modalName = $('#modalName').val();
            $('#add-modal-content').load('/' + pageName + '/Add?id=' + id);
            $('#modal-dialog').find('.modal-dialog').addClass(modalName);
            $('#modal-dialog').modal('show');
            ValidationColor_Change();
        }


        function openDeleteDialog(id) {
            let pageName = $('#pageName').val();
            ShowDeleteConfirmBox(id, pageName);
        }

        function ShowDeleteConfirmBox(id,pageName) {
            swal({
                title: "Are you sure?",
                text: "Once deleted, you will not be able to recover",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then(function (result) {
                if (result) {
                    Delete_AjaxMethod(id, pageName);
                }
            });
        }


        function Delete_AjaxMethod(id, mode) {
            $.ajax({
                type: 'GET',
                url: '/' + mode +'/Delete',
                dataType: 'json',
                data: { id:id,mode:mode },
                success: function (data) {
                    LoadGridTable();
                },
                error: function (ex) {
                    LoadGridTable();
                  DeleteModalErrors = ex;
                }
            });
        }

        function setActiveMenu() {
            let activeMenu = '@ViewBag.ActiveMenu';
            $('.nav-link').removeClass('active');
            $('.' + activeMenu).addClass('active');
        }

        function validateNumber(event) {
            var key = window.event ? event.keyCode : event.which;
            if (event.keyCode === 8 || event.keyCode === 46) {
                return true;
            } else if (key < 48 || key > 57) {
                return false;
            } else {
                return true;
            }
        };


        function OnFailure(e) {
            alert('failure')
            console.log(e);
        }

        function CustomAlert(message, page) {
            swal("", message, "warning");
        }


        function ValidationColor_Change() {
            $("input").focusout(function () {
                if ($(this).val() != '') {
                    $(this).removeClass('border-red');
                }

            });
            $("input").keypress(function () {
                if ($(this).val() != '') {
                    $(this).removeClass('border-red');
                }
            });

            $("textarea").keypress(function () {
                if ($(this).val() != '') {
                    $(this).removeClass('border-red');
                }
            });

            $("select").change(function () {
                if ($(this).val() != '' && $(this).val() != '0') {
                    $(this).removeClass('border-red');
                }
            });
        }

        function checkValidation(event,formname) {

            let isValid = true;

            let $formelement = $('#' + formname);

            elemetnNAme = $formelement;

            $formelement.find('.required-text').each(function () {
                if ($(this).val() != null && $(this).val() != undefined && $(this).val().trim() == '') {
                    $(this).addClass('border-red');
                //    alert($(this).attr('id'));
                    isValid = false;
                }
            });

            $formelement.find('.required-drop').each(function () {
                if ($(this).val() != null && $(this).val() != undefined && $(this).val().trim() == '') {
                    $(this).addClass('border-red');
                    isValid = false;
                }
            });

            if (!isValid) {
               alert('asdadasd')
                event.preventDefault();
            }

            return isValid;
        }


        function Logout() {
            location.href = '/Login/Index';
        }


